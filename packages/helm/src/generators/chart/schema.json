{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ChartGeneratorSchema",
  "title": "Chart Generator Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the chart",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Provide a name for your chart"
    },
    "project": {
      "type": "string",
      "description": "Name of the project to add the chart to",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": "Provide the project name"
    },
    "chartFolder": {
      "type": "string",
      "description": "Folder to store the chart",
      "$default": {
        "$source": "argv",
        "index": 2
      },
      "default": "chart",
      "x-prompt": "Provide the chart folder"
    }
  },
  "required": ["name", "project"]
}
